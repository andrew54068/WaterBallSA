# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/waterballsa
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=123456789-abcdefg.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-CHANGE-THIS-IN-PRODUCTION-min-32-characters
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Redis Configuration (for rate limiting and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (for video storage)
AWS_S3_BUCKET_NAME=waterballsa-videos
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://waterballsa.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Environment
SPRING_PROFILES_ACTIVE=dev
