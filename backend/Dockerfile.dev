# Development Dockerfile for Spring Boot backend
FROM maven:3.9-eclipse-temurin-17

# Set working directory
WORKDIR /app

# Copy Maven wrapper and pom.xml first for dependency caching
COPY .mvn/ .mvn/
COPY mvnw mvnw.cmd pom.xml ./

# Download dependencies (this layer will be cached if pom.xml doesn't change)
# Unset MAVEN_CONFIG locally to avoid conflict with mvnw, but keep it for runtime
RUN MAVEN_CONFIG= ./mvnw dependency:go-offline -B

# Copy source code
COPY src/ ./src/

# Expose application port
EXPOSE 8080

# Run Spring Boot with devtools for hot reload
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.jvmArguments='-Dspring.devtools.restart.enabled=true'"]
